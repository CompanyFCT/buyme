body
  font-family: 'Droid Sans', Arial, sans-serif


ul
  list-style: none
  width: 99%
  float: left

div.product
  text-align: center
  color: #000000
  font-size: 12px
  text-transform: uppercase

  li
    display: list-item
    float: left
    height: 300px
    width: 175px

    img
      display: block
      margin-left: auto
      margin-right: auto

    h3
      margin-bottom: 1px;
      p.name
        padding: 1px 3px
        margin-bottom: auto;

    div.price
      p
        margin-top: 0px;
        margin-bottom: 0px;
        
      p.old
        text-decoration: line-through;
