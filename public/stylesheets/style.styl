body
  font-family: 'Droid Sans', Arial, sans-serif
  overflow: hidden

header
  div#fb
    vertical-align: middle
    float: left
    margin-left: 10px
    margin-top: 9px

div#wrap
  div
    header
      height: 40px;
      background-color:#2c2c2c
      top:0px
      position:fixed
      right:0px
      left:0px

  ul
    list-style: none

  div#product-content
    margin-bottom:5%

  div.product
    text-align: center
    color: #000000
    font-size: 12px
    text-transform: uppercase

    li
      display: list-item
      float: left
      height: 300px
      width: 175px

      img
        display: block
        margin-left: auto
        margin-right: auto

      h3
        margin-bottom: 1px
        p.name
          padding: 1px 3px
          margin-bottom: auto

      div.price
        p
          margin-top: 0px
          margin-bottom: 0px
          
        p.old
          text-decoration: line-through
