body
  font-family: 'Droid Sans', Arial, sans-serif

div#wrap
  overflow:visible

  div
    margin-bottom: 5%
    header
      background-color:#2c2c2c
      top:0px
      position:fixed
      right:0px
      left:0px
      width: 100%


  ul
    list-style: none

  div#product-content
    margin-bottom:5%

  div.product
    text-align: center
    color: #000000
    font-size: 12px
    text-transform: uppercase

    li
      display: list-item
      float: left
      height: 300px
      width: 175px

      img
        display: block
        margin-left: auto
        margin-right: auto

      h3
        margin-bottom: 1px
        p.name
          padding: 1px 3px
          margin-bottom: auto

      div.price
        p
          margin-top: 0px
          margin-bottom: 0px
          
        p.old
          text-decoration: line-through
