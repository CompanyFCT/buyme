div#wrap
  div
    header
      height: 40px;
      background-color:#2c2c2c
      top:0px
      position:fixed
      right:0px
      left:0px

  ul
    list-style: none

  div#product-content
    margin-top:5%

    ul.product
      float: left
      width: 99%
      margin-top: 0px
      margin-bottom: 0px

      div.product
        text-align: center
        color: #000000
        font-size: 12px
        text-transform: uppercase

        li
          display: list-item
          float: left
          height: 300px
          width: 175px

          img
            display: block
            margin-left: auto
            margin-right: auto

          h3
            margin-bottom: 1px
            p.name
              padding: 1px 3px
              margin-bottom: auto

          div.price
            p
              margin-top: 0px
              margin-bottom: 0px
              
            p.old
              text-decoration: line-through


    ul.paginator
      font: 14px/24px sans-serif
      width: 100%
      float: left
      text-align: center
      padding: 20px;
      margin-bottom: 20px;

      a
        display: inline-block
        padding: 0px 9px
        margin-right: 4px
        border-radius: 3px
        color: #feffff
        font-weight: bold
        text-decoration: none

      .paginator-page
        border: solid 1px #32373b
        background: #3e4347
        box-shadow: inset 0px 1px 1px rgba(255,255,255, .1), 0px 1px 3px rgba(0,0,0, .1)
        text-shadow: 0px 1px 0px rgba(0,0,0, .5)

      .paginator-current
        border: none
        background: #2f3237
        box-shadow: inset 0px 1px 8px rgba(0,0,0, .5), 0px 1px 0px rgba(255,255,255, .1)
        text-shadow: 0px 1px 0px rgba(0,0,0, .5)
        pointer-events: none
        cursor: default

      .paginator-page:hover
        background: #3d4f5d
        background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#547085), to(#3d4f5d))
        background: -moz-linear-gradient(0% 0% 270deg,#547085, #3d4f5d)